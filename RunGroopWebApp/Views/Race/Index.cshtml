@model IEnumerable<Race>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <h1 class="fw-light">Races</h1>
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img src="@item.Image" class="bd-placeholder-img card-img-top" width="100%" height="225"></img>
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Race" asp-action="Details" asp-route-id="@item.Id" type="btn btn-success"
                                       class="btn btn-sm btn-outline-secondary">
                                        View
                                    </a>
                                    <a asp-controller="Race" asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">
                                        Edit
                                    </a>
                                </div>
                                <small class="text-muted">@item.RaceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>